# Neural Memory Graph Configuration
# Copy this file to .env and customize

# =============================================================================
# DATABASE
# =============================================================================
DB_PATH=/app/data/memory.db

# =============================================================================
# SERVER
# =============================================================================
FLASK_PORT=5000
FLASK_DEBUG=false

# =============================================================================
# AUTHENTICATION
# =============================================================================
# IMPORTANT: Change this to a strong, unique key (32+ characters recommended)
NEURAL_API_KEY=your_secure_api_key_here_change_me

# =============================================================================
# SPREADING ACTIVATION
# =============================================================================
# Number of activation spread iterations (more = deeper associations)
ACTIVATION_ITERATIONS=3

# Decay factor per iteration (0-1, lower = faster decay)
ACTIVATION_DECAY=0.7

# Minimum similarity for semantic links (0-1)
SIMILARITY_THRESHOLD=0.5

# Maximum semantic links per note
MAX_SEMANTIC_LINKS=5

# =============================================================================
# TEMPORAL DECAY
# =============================================================================
# Half-life for recency weighting (in days)
# After this many days, a note's activation is halved
HALF_LIFE_DAYS=30

# =============================================================================
# ENTITY EXTRACTION
# =============================================================================
# Options: regex, spacy, llm
# - regex: Fast, no extra dependencies, pattern-based
# - spacy: Requires spacy + model, better NER
# - llm: Requires LLM API, best quality (not yet implemented)
ENTITY_EXTRACTOR=regex

# =============================================================================
# EMBEDDING MODEL
# =============================================================================
# HuggingFace model for semantic embeddings
# Default produces 384-dimensional vectors
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# EMOTIONAL MEMORY (Optional)
# =============================================================================
# Enable emotional context fields (tone, intensity, reflection)
# When disabled, emotional parameters are ignored (stored as NULL)
# See docs/EMOTIONAL_MEMORY.md for details
ENABLE_EMOTIONAL_MEMORY=false

# =============================================================================
# MCP ENDPOINT
# =============================================================================
# Custom MCP endpoint path (default: /sse)
MCP_ENDPOINT=/sse

# =============================================================================
# ANN INDEXING (Approximate Nearest Neighbor)
# =============================================================================
# Enable fast O(log n) similarity search instead of O(n) linear scan
USE_ANN_INDEX=true

# Index type: HNSW (Hierarchical Navigable Small World)
ANN_INDEX_TYPE=HNSW

# HNSW parameters (higher = better recall but slower build/search)
HNSW_M=32                    # Number of bi-directional links per node
HNSW_EF_CONSTRUCTION=64      # Size of dynamic candidate list during construction
HNSW_EF_SEARCH=32            # Size of dynamic candidate list during search
